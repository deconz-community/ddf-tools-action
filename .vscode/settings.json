{
    "testing.automaticallyOpenPeekView": "never",
    "debug.toolBarLocation": "docked",
    // Enable the ESlint flat config support
    "eslint.experimental.useFlatConfig": true,
    // Disable the default formatter, use eslint instead
    "prettier.enable": false,
    "editor.formatOnSave": false,
    // Auto fix
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never"
    },
    // Silent the stylistic rules in you IDE, but still auto fix them
    "eslint.rules.customizations": [
        {
            "rule": "style/*",
            "severity": "off"
        },
        {
            "rule": "*-indent",
            "severity": "off"
        },
        {
            "rule": "*-spacing",
            "severity": "off"
        },
        {
            "rule": "*-spaces",
            "severity": "off"
        },
        {
            "rule": "*-order",
            "severity": "off"
        },
        {
            "rule": "*-dangle",
            "severity": "off"
        },
        {
            "rule": "*-newline",
            "severity": "off"
        },
        {
            "rule": "*quotes",
            "severity": "off"
        },
        {
            "rule": "*semi",
            "severity": "off"
        }
    ],
    // Enable eslint for all supported languages
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "jsonc",
        "yaml"
    ],
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "github-actions.workflows.pinned.workflows": [
      ".github/workflows/ci.yml"
    ],
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#3e5771",
      "activityBar.background": "#3e5771",
      "activityBar.foreground": "#e7e7e7",
      "activityBar.inactiveForeground": "#e7e7e799",
      "activityBarBadge.background": "#291720",
      "activityBarBadge.foreground": "#e7e7e7",
      "commandCenter.border": "#e7e7e799",
      "sash.hoverBorder": "#3e5771",
      "statusBar.background": "#2c3e50",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#3e5771",
      "statusBarItem.remoteBackground": "#2c3e50",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#2c3e50",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#2c3e5099",
      "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.remoteColor": "#2c3e50"
}
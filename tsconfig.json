{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}

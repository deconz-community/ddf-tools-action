{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "Node16",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node16",
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}